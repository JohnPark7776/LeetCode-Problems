class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        l1_string = ""
        l2_string = ""
        while l1 and l2:
            l1_string += str(l1.val)
            l2_string += str(l2.val)
            l1, l2 = l1.next, l2.next
        while l1:
            l1_string += str(l1.val)
            l1 = l1.next
        while l2:
            l2_string += str(l2.val)
            l2 = l2.next
        ans = str(int(l1_string[::-1]) + int(l2_string[::-1]))
        ans = ans[::-1]
        l3 = ListNode()
        final = l3
        for i,ch in enumerate(ans):
            l3.val = ch
            if i < len(ans) - 1:
                l3.next = ListNode()
                l3 = l3.next
        return final
