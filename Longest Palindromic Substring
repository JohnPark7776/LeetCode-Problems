class Solution:
    def longestPalindrome(self, s: str) -> str:
        """
        :type s: str
        :rtype: str
        """
        if len(s) == 1 or s == s[::-1]:
            return s
        def expand(left: int, right: int):
            temp = s[left+1] if (right-left) == 2 else ''
            while (left >= 0 and right <= len(s)-1) and s[left] == s[right]:
                temp = s[left] + temp + s[right]
                left -= 1
                right += 1
            return temp
        ans = ''
        for i in range(len(s)-1):
            ans = max(
                ans,
                expand(i,i+1),
                expand(i,i+2),
                key=len
            )
        return ans
